{
  "name": "timeline-composer-monorepo",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "author": "Hendrik Mans <hendrik@mans.de>",
  "license": "MIT",
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 90
  },
  "scripts": {
    "build": "preconstruct build",
    "dev": "pnpm examples",
    "examples": "preconstruct dev && cd apps/examples/ && pnpm dev",
    "postinstall": "preconstruct dev && manypkg check",
    "test": "jest --passWithNoTests",
    "ci": "preconstruct validate && manypkg check && pnpm build && pnpm test",
    "release": "pnpm ci && pnpm changeset publish"
  },
  "dependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.17.12",
    "@changesets/cli": "^2.23.0",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "@testing-library/jest-dom": "^5.16.4",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  },
  "stackblitz": {
    "startCommand": "cd apps/examples && yarn dev"
  }
}
